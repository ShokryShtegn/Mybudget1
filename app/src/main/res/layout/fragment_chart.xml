<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.ChartFragment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="12dp"
        android:text="Show transactions according to their categories during a given month"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:background="#F7F700">
        <Spinner
            android:id="@+id/determine1"
            android:layout_width="140dp"
            android:layout_height="match_parent"/>

        <Spinner
            android:id="@+id/month"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <Spinner
            android:id="@+id/year1"
            android:layout_width="90dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/show1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Show"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="#F4A500"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">



        <com.anychart.anychart.AnyChartView
            android:id="@+id/any_chart_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </androidx.cardview.widget.CardView>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:text="Show your transactions in a specific year"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:background="#F7F700">
        <Spinner
            android:id="@+id/determine2"
            android:layout_width="140dp"
            android:layout_height="match_parent"/>

        <Spinner
            android:id="@+id/year2"
            android:layout_width="140dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/show2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Show"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="#F4A500"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGraph"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">


        <org.eazegraph.lib.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#FFA726"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="January"
                    android:paddingLeft="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#66BB6A"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="February"
                    android:paddingLeft="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#EF5350"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="March"
                    android:paddingLeft="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#29B6F6"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="April"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#7B5B14"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="May"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#D5D5D5"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="June"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#000000"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="July"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#F71498"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="August"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#00F701"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="September"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#F7F700"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="October"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#683294"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="November"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp">


                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="#00A9A8"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="December"
                    android:paddingLeft="10dp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>